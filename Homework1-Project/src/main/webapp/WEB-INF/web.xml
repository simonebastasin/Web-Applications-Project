<?xml version="1.0" encoding="UTF-8"?>
<web-app id="hello-world-webapp" version="5.0" xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd">
    <display-name>Electromechanics shop</display-name>
    <description>A very simple Electromechanics shop by wadteam</description>
    <welcome-file-list>
        <welcome-file>/</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>LoggerServlet</servlet-name>
        <servlet-class>it.unipd.dei.wa2122.wadteam.servlets.LoggerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoggerServlet</servlet-name>
        <url-pattern>/log4jlogger/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>it.unipd.dei.wa2122.wadteam.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderListServlet</servlet-name>
        <servlet-class>it.unipd.dei.wa2122.wadteam.servlets.OrderListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderListServlet</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderListServlet</servlet-name>
        <url-pattern>/order/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MediaServlet</servlet-name>
        <servlet-class>it.unipd.dei.wa2122.wadteam.servlets.MediaServlet</servlet-class>
        <multipart-config>
            <max-file-size>208488200</max-file-size>
            <max-request-size>4180188410</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>MediaServlet</servlet-name>
        <url-pattern>/media/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HomePageServlet</servlet-name>
        <servlet-class>it.unipd.dei.wa2122.wadteam.servlets.HomePageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomePageServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductDetailServlet</servlet-name>
        <servlet-class>it.unipd.dei.wa2122.wadteam.servlets.ProductDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductDetailServlet</servlet-name>
        <url-pattern>/productDetail/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductCategoryDetailServlet</servlet-name>
        <servlet-class>it.unipd.dei.wa2122.wadteam.servlets.ProductCategoryDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductCategoryDetailServlet</servlet-name>
        <url-pattern>/categoryDetail/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BuyProductServlet</servlet-name>
        <servlet-class>it.unipd.dei.wa2122.wadteam.servlets.BuyProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BuyProductServlet</servlet-name>
        <url-pattern>/buy</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuyProductServlet</servlet-name>
        <url-pattern>/buy/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TicketServlet</servlet-name>
        <servlet-class>it.unipd.dei.wa2122.wadteam.servlets.TicketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TicketServlet</servlet-name>
        <url-pattern>/ticket</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TicketServlet</servlet-name>
        <url-pattern>/ticket/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateCustomerServlet</servlet-name>
        <servlet-class>it.unipd.dei.wa2122.wadteam.servlets.UpdateCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCustomerServlet</servlet-name>
        <url-pattern>/customer/modify</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/customer/modify/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>it.unipd.dei.wa2122.wadteam.servlets.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <description>Connection pool to the database</description>
        <res-ref-name>jdbc/electromechanics_shop</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <filter>
        <filter-name>CustomerFilter</filter-name>
        <filter-class>it.unipd.dei.wa2122.wadteam.filter.CustomerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CustomerFilter</filter-name>
        <url-pattern>/order/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CustomerFilter</filter-name>
        <url-pattern>/order</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CustomerFilter</filter-name>
        <url-pattern>/buy</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CustomerFilter</filter-name>
        <url-pattern>/buy/*</url-pattern>
    </filter-mapping>
</web-app>